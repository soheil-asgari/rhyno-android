{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Add or ensure 'jsx' is set correctly
    "jsx": "react-native",
    // Keep the 'lib' setting we added earlier
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ]
}