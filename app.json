{
  "expo": {
    "name": "Rhynoapp",
    "slug": "Rhynoapp",
    "scheme": "rhynoapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.rhynoapp",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "برنامه برای ذخیره عکس‌ها در گالری شما نیاز به دسترسی دارد.",
        "NSPhotoLibraryAddUsageDescription": "برنامه برای ذخیره عکس‌ها در گالری شما نیاز به دسترسی دارد.",
        "NSMicrophoneUsageDescription": "برنامه برای ضبط ورودی صوتی شما نیاز به دسترسی به میکروفون دارد."
      }
    },
    "android": {
      "package": "com.anonymous.rhynoapp",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-web-browser",
      [
        "expo-media-library",
        {
          "photosPermission": "اجازه دسترسی به گالری برای ذخیره تصاویر.",
          "savePhotosPermission": "اجازه ذخیره تصاویر در گالری.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "اجازه دسترسی به میکروفون برای ضبط صدا."
        }
      ],
      "expo-audio"
    ],
    "extra": {
      "eas": {
        "projectId": "508b8442-8bee-4a32-8c32-3f64da1b776c"
      }
    }
  }
}
